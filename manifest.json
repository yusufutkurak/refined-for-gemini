{
    "manifest_version": 3,
    "name": "Refined for Gemini: Themes & PDF Export",
    "short_name": "Refined",
    "version": "1.2",
    "description": "The best Gemini Dark Theme & PDF Exporter. Customize Gemini with 20+ themes like Dracula, Matrix & Nord. Clean, Fast & Private.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "refined-for-gemini@yusufcodes.com",
            "strict_min_version": "109.0"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "css": [
                "themes.css",
                "styles.css",
                "settings.css",
                "atmosphere.css",
                "gem.css"
            ],
            "js": [
                "modules/theme.js",
                "modules/pdf.js",
                "modules/atmospheres/snow.js",
                "modules/atmospheres/rain.js",
                "modules/atmospheres/firefly.js",
                "modules/atmospheres/sakura.js",
                "modules/atmospheres/flame.js",
                "modules/atmospheres/manager.js",
                "modules/ui.js",
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*.png",
                "images/*.webp"
            ],
            "matches": [
                "https://gemini.google.com/*"
            ]
        }
    ]
}